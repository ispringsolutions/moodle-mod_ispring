{{!
    @template mod_ispring/view_page

    /mod/ispring/view.php page template

    Example context (json):
    {
        "play_button_url": "/mod/ispring/play.php?id=1",
        "play_button_text": "Play content",
        "module_info_text": "Grading method: Highest grade",
        "warning": "This learning content was updated since the last time you took it.",
        "report": "<!-- user sessions report as HTML document -->",
        "report_title": "My results"
    }
}}
<div class="tertiary-navigation">
    <div>
        <a class="btn btn-primary" href="{{play_button_url}}">{{play_button_text}}</a>
    </div>
</div>
<p class="py-3">{{module_info_text}}</p>
{{#warning}}
    <div class="alert alert-warning">{{warning}}</div>
{{/warning}}
{{#report}}
    <h3 class="my-3">{{report_title}}</h3>
    {{{report}}}
{{/report}}